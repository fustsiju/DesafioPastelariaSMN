@page
@model DesafioPastelariaSMN.Pages.CadastroModel
@{
    ViewData["Title"] = "Cadastro";
}

<div class="container tarefa">
    <div class="container d-grid justify-content-center">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="nome" class="form-label fs-5">Nome completo</label>
                <input asp-for="Usuario.nomeUser" type="text" class="form-control" id="nome" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-labe fs-5">Email</label>
                <div class="input-group">
                    <span class="input-group-text" id="inputGroupPrepend2"></span>
                    <input asp-for="Usuario.emailUser" type="text" class="form-control" id="email" aria-describedby="inputGroupPrepend2" required>
                </div>
            </div>
            <div class="row">
                <div class="col mb-3">
                    <label for="nasec" class="form-label fs-5">Data de nascimento</label>
                    <input asp-for="Usuario.nasecUser" type="date" class="form-control" id="nasec" required>
                </div>

                <div class="col mb-3">
                    <label for="senha" class="form-label fs-5">Senha</label>
                    <div class="input-group">
                        <span class="input-group-text" id="inputGroupPrepend2"></span>
                        <input asp-for="Usuario.senhaUser" type="password" class="form-control" id="senha" aria-describedby="inputGroupPrepend2" required>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="rua" class="form-label fs-5">Endereço</label>
                <input asp-for="Usuario.ruaUser" type="text" class="form-control" id="rua" required>
            </div>
            <div class="row">
                <div class="col">
                    <label for="num" class="form-label fs-5">Numero</label>
                    <input asp-for="Usuario.numUser" type="text" class="form-control" id="num" aria-describedby="inputGroupPrepend2" required />
                </div>
                <div class="col">
                    <label for="validationDefault05" class="form-label fs-5">Telefone</label>
                    <input asp-for="Usuario.telUser" type="text" class="form-control" id="telefone" required>
                </div>
                <div class="col">
                    <label for="validationDefault05" class="form-label fs-5">Celular</label>
                    <input asp-for="Usuario.celUser" type="text" class="form-control" id="celular" required>
                </div>

                <div class="form-group">
                    <label for="exampleFormControlFile1"><p class="fs-5">Foto do funcionario</p></label>
                    <input type="file" class="form-control-file" id="foto" accept="image/png, image/jpeg" asp-for="Usuario.foto">
                </div>

            </div>
            <div class="d-flex justify-content-center">
                <div class=" mt-3 mt-2 ">
                    <button class="btn btn-primary" type="submit">Cadastrar</button>
                </div>
            </div>
        </form>

        @if (string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert mt-3 alert-danger">
                <a>Atenção: Preencher todos os campos!</a>
                @Model.Message
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.Message) && Model.MessageType == true)
        {
            <div class="alert mt-3 alert-success">
                @Model.Message
            </div>
        }
        else if (Model.MessageType == false)
        {
            <div class=" alert mt-3 alert-warning">
                @Model.Message
            </div>
        }



    </div>
</div>
